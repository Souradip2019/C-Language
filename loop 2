// (1/(1+2))+(2/(2+3))+(3/(3+4))+.........+(n/(n+1))
#include<stdio.h>
int main ()
{
    int range,i;
    float ans=0.0;
    printf ("Enter the range: ");
    scanf ("%d",&range);
    for (i=1;i<=range;i++)
    {

        ans=(ans*1.0)+(i/(i+i+1.0));
    }
    printf ("ANS=%f",ans);
    return 0;
}
