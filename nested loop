#include<stdio.h>
int main ()
{
    int r,i,j;
    printf ("How many rows you want to print:: ");
    scanf ("%d",&r);
    for (i=1;i<=r;i++)
    {
        for (j=1;j<=(r-i);j++)
            printf (" ");

        for (j=1;j<=i;j++)
            printf ("* ");
            printf ("\n\n");
    }
    return 0;
    getch ();
}
